<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FriendChallenges">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20sp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="234dp"
                android:layout_height="61dp"
                android:text="Who is your friend?"
                android:textSize="25sp" />

            <AutoCompleteTextView
                android:id="@+id/friendNameInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="47dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:text="What's the challenge's name?"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/friendChallengeNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Challenge name"
                android:inputType="textPersonName" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:text="What will they cook?"
                android:textSize="25sp" />

            <AutoCompleteTextView
                android:id="@+id/challengeRecipeInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:completionThreshold="1"
                android:ems="10"
                android:hint="Recipe"
                android:inputType="textPersonName" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:text="Extra challenges?"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/extraChallengesInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="+"
                android:inputType="textPersonName" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:visibility="visible" />

            <Button
                android:id="@+id/sendChallengeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Send challenge!" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:visibility="visible" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>